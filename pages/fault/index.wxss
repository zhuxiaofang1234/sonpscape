/* pages/fault/index.wxss */

.fault-content{
  border:1px dotted #bbb;
  padding:20rpx;
  font-size: 24rpx;
  margin-bottom:20rpx;
}

.photo{
  padding:8rpx;
  display: flex;
  justify-content: space-between;
  padding:20rpx 40rpx;
}

.uploader-wrap{
  width:156rpx;
  height:156rpx;
  border:2px solid #f2f1f2;
  text-align: center;
  background-color: #f2f2f3;
}
.uploader-wrap .iconfont{
  font-size: 52rpx;
  margin-top:30rpx;
  color:#8c959a;
}

.label-text{
  font-size: 28rpx;
}
.textarea{
  width:100%;
  height:120rpx;
  border:1px solid #ccc;
  padding:10rpx 32rpx;
  box-sizing: border-box;
  margin-top:20rpx;
}

.add-btn{
  width:480rpx;
  padding:10rpx 0;
  border:1px dashed #3894ff;
  border-radius: 10rpx;
  text-align: center;
  margin:40rpx auto 0 auto;
  color:#3894ff; 
}

.add-btn .icon-icon-test{
  font-size: 48rpx;
}
